    git                         \
    cmake                       \
    g++                         \
    libboost-all-dev            \
    "

$ sudo apt install -y $packages_build

$ packages_qt5="\
    qt5-qmake           \
    libqt5widgets5      \
    libqt5opengl5-dev   \
    qttools5-dev        \
    qtbase5-dev         \
    "

$ sudo apt install -y $packages_qt5

$ packages_ifcpp="\
    libopenscenegraph-3.4-dev
    "
$ sudo apt install -y $packages_ifcpp

$ sudo apt update
$ sudo apt clean

$ mkdir ifcpp
$ cd ifcpp
$ git clone https://github.com/berndhahnebach/ifcplusplus/ ifcpp

$ mkdir build
$ cd build
$ rm -rf *
$ cmake  -DCMAKE_BUILD_TYPE=Debug ../ifcpp
$ make OR $ make -j$(nproc) <------------------------------------------------------------------ FAILED

